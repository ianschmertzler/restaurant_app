<nav>
	<h1 class="title">Add a party</h1>
</nav>
<br>

<!-- Newform -->
<div class="newform">
	<form action="/parties" method="post">
		Name of Party <input type="text" name="party[name]"/><br>
		Name of Party Head<input type="text" name="party[party_head_name]"/><br>
		Party Size <input type="number" name="party[attendees]"/><br>
		Table Number <input type="number" name="party[tab_num]"/><br><br>

		<hr> 
		Allergies
		<div>
			
			<input id="none" type="radio" name="party[allergen]" value="none" checked="checked"/>
			<label for="none">None</label>
			
			<input id="nuts"type="radio" name="party[allergen]" value="nuts"/>
			<label for="nuts">Nuts</label>
			
			<input id="peanuts"type="radio" name="party[allergen]" value="peanuts"/>
			<label for="peanuts">Peanuts</label>
			
			<input id="shellfish"type="radio" name="party[allergen]" value="shellfish"/>
			<label for="shellfish">Shellfish</label><br>
			
			<input id="gluten"type="radio" name="party[allergen]" value="gluten"/>
			<label for="gluten">Gluten</label>
			
			<input id="lactose"type="radio" name="party[allergen]" value="lactose"/>
			<label for="lactose">Lactose</label>
		
		</div>
		
		<hr>
		Diet
		<div>
		
			<input id="No Restrictions" type="radio" name="party[diet_flags]" value="No Restrictions" checked="checked"/>
			<label for="No Restrictions">No Restrictions</label>
			
			<input id="vegan" type="radio" name="party[diet_flags]" value="vegan"/>
			<label for="vegan">Vegan</label>
			
			<input id="vegetarian" type="radio" name="party[diet_flags]" value="vegetarian"/>
			<label for="vegetarian">Vegetarian</label><br>
			
			<input id="pescatarian" type="radio" name="party[diet_flags]" value="pescatarian"/>
			<label for="pescatarian">Pescatarian</label>
		<hr>
		</div><br>

		Returning Customer?<input id="Returning Customer" type="radio" name="party[past_attendance]" value="yes"/><br>

		Prepaid? <div class="payment_form">
		<input id="yes_box" type="radio" name="party[paid]" value="yes"/>
		<label for="yes_box">Yes</label>
		<input id="no_box" type="radio" name="party[paid]" value="no" checked="checked"/>
		<label for="no_box">No</label>
		<br>
		<input type="submit" value="Submit"/>
			
		</div>

	</form>
</div>


<nav>
